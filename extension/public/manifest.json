{
  "manifest_version": 3,
  "name": "CV Tailor",
  "version": "1.0.0",
  "description": "Automatically tailors your CV to job listings using AI",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://youtu.be/XoijjjTAqro?si=pBJlhgNlWrbvk3r0/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
} 